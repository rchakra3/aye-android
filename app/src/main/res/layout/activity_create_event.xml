<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#32506d"
    tools:context="com.aye.rohan.locationapp.CreateEventActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:backgroundTint="@color/bright_foreground_disabled_material_dark"
            android:textColor="#dee7ef"
            android:text="Latitude"
            android:id="@+id/latLabel" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_toRightOf="@id/latLabel"
            android:textColor="#dee7ef"
            android:ems="10"
            android:id="@+id/latValue"
            android:layout_gravity="right"/>
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:backgroundTint="@color/bright_foreground_disabled_material_dark"
            android:textColor="#dee7ef"
            android:text="Longitude"
            android:id="@+id/longLabel" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_toRightOf="@id/longLabel"
            android:ems="10"
            android:id="@+id/longValue"
            android:layout_gravity="right"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:backgroundTint="@color/bright_foreground_disabled_material_dark"
            android:textColor="#dee7ef"
            android:text="Description"
            android:id="@+id/event_description_label" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#dee7ef"
            android:layout_toRightOf="@id/event_description_label"
            android:ems="10"
            android:id="@+id/event_description_Value"
            android:layout_gravity="right"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:backgroundTint="@color/bright_foreground_disabled_material_dark"
            android:textColor="#dee7ef"
            android:text="User's Name"
            android:id="@+id/user_name_label" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_toRightOf="@id/user_name_label"
            android:textColor="#dee7ef"
            android:ems="10"
            android:id="@+id/user_name_value"
            android:layout_gravity="right"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pin2"
            android:onClick="createEvent" />
    </TableRow>

</TableLayout>
