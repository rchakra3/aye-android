<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#32506d"
    tools:context="com.aye.rohan.locationapp.TemporarySuccessActivity">

    <TextView android:text="@string/event_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:backgroundTint="@color/bright_foreground_disabled_material_dark"
        android:textColor="#dee7ef"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:backgroundTint="@color/bright_foreground_disabled_material_dark"
            android:textColor="#dee7ef"
            android:text="Latitude"
            android:id="@+id/latitude"
            android:layout_column="1" />

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:backgroundTint="@color/bright_foreground_disabled_material_dark"
            android:textColor="#dee7ef"
            android:text="Longitude"
            android:id="@+id/longitude"
            android:layout_column="1" />

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:backgroundTint="@color/bright_foreground_disabled_material_dark"
            android:textColor="#dee7ef"
            android:text="Description"
            android:id="@+id/description"
            android:layout_column="1" />

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:backgroundTint="@color/bright_foreground_disabled_material_dark"
            android:textColor="#dee7ef"
            android:text="User Name"
            android:id="@+id/user_name"
            android:layout_column="1" />

    </TableRow>
</TableLayout>
