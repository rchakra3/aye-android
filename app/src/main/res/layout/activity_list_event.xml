<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#32506d"
    tools:context="com.aye.rohan.locationapp.ListEvent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:backgroundTint="@color/bright_foreground_disabled_material_dark"
        android:textColor="#dee7ef"
        android:text="                  Events Close to you "
        android:id="@+id/list_label"
        android:textAlignment="center"/>

    <ListView android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dee7ef"
        android:layout_weight="1"
        android:drawSelectorOnTop="false"/>

</LinearLayout>
